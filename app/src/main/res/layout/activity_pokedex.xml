<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.risbo.pokedex.PokedexActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pokedex!"
        android:textSize="40dp"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click a Pokemon to learn more about it"
        />



    <TableLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TableRow
            android:layout_weight="1">
            <ImageButton
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:tag="bulbizarre"
                android:onClick="pokemonClick"
                android:src="@drawable/bulbizarre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bulbizarre" />


            <ImageButton
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:tag="herbizarre"
                android:onClick="pokemonClick"
                android:src="@drawable/herbizarre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/herbizarre" />

            <ImageButton
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:tag="florizarre"
                android:onClick="pokemonClick"
                android:src="@drawable/florizarre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/florizarre" />



        </TableRow>

        <TableRow
            android:layout_weight="1">

            <ImageButton
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:tag="salameche"
                android:onClick="pokemonClick"
                android:src="@drawable/salameche"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/salameche" />

            <ImageButton
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:tag="reptincel"
                android:onClick="pokemonClick"
                android:src="@drawable/reptincel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reptincel" />

            <ImageButton
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:tag="dracaufeu"
                android:onClick="pokemonClick"
                android:src="@drawable/dracaufeu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dracaufeu" />



        </TableRow>

        <TableRow
            android:layout_weight="1">
            <ImageButton
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:tag="nidoranmale"
                android:onClick="pokemonClick"
                android:src="@drawable/nidoranmale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nidoranmale" />


            <ImageButton
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:tag="nidorinoo"
                android:onClick="pokemonClick"
                android:src="@drawable/nidorinoo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nidorino" />

            <ImageButton
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:tag="nidoking"
                android:onClick="pokemonClick"
                android:src="@drawable/nidoking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nidoking" />

        </TableRow>


        <TableRow
            android:layout_weight="1">
            <ImageButton
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:tag="nidoranfem"
                android:onClick="pokemonClick"
                android:src="@drawable/nidoranfemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nidoranfem" />

            <ImageButton
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:tag="nidorina"
                android:onClick="pokemonClick"
                android:src="@drawable/nidorina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nidorina" />


            <ImageButton
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:tag="nidoqueen"
                android:onClick="pokemonClick"
                android:src="@drawable/nidoqueen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nidoqueen" />

        </TableRow>

    </TableLayout>




</LinearLayout>
